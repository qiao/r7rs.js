#!/usr/bin/env node

var fs = require('fs'),
    r7rs = require('../');


function main(argv) {
    var filename = argv[2];
    fs.readFile(filename, function (err, data) {
        if (err) {
            console.error(err.message);
        } else {
            var source = data.toString();
            var expr = r7rs.parse(source)[0];
            var opcode = r7rs.compile(expr);
            r7rs.execute(opcode);
        }
    });
}

main(process.argv)
